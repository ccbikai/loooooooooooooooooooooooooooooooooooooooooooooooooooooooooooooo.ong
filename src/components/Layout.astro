---
import { SEO } from "astro-seo";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import config from "../config.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <SEO
      title={config.title + ' - ' + config.description}
      description={config.description}
      canonical={config.url}
      openGraph={{
        basic: {
          type: 'website',
          title: config.title,
          image: config.image,
          url: config.url
        },
        optional: {
          description: config.description
        }
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@miantiao_me',
        title: config.title,
        description: config.description,
        image: config.image
      }}
    />
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>
  <body class="text-orange-500 bg-white">
    <div class="fixed inset-0 bg-orange-50/10 pointer-events-none" aria-hidden="true">
      <svg class="absolute inset-0 h-full w-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid-pattern" width="16" height="16" patternUnits="userSpaceOnUse">
            <circle cx="8" cy="8" r="1" class="fill-orange-400/20" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-pattern)" />
      </svg>
    </div>
    <main class="relative max-w-4xl mx-auto px-4 md:px-6 min-h-screen flex flex-col">
      <Header />
      <slot />
      <Footer />
    </main>
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
