---
import { SEO } from "astro-seo";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import config from "../config.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Averia+Libre:wght@700&family=Averia+Serif+Libre:wght@300&family=Caveat&display=swap" rel="stylesheet">
    <SEO
      title={config.title + ' - ' + config.description}
      description={config.description}
      canonical={config.url}
      openGraph={{
        basic: {
          type: 'website',
          title: config.title,
          image: config.image,
          url: config.url
        },
        optional: {
          description: config.description
        }
      }}
      twitter={{
        card: 'summary_large_image',
        site: '@ccbikai',
        title: config.title,
        description: config.description,
        image: config.image
      }}
    />
    <Fragment set:html={import.meta.env.HEADER_INJECT} />
  </head>
  <body>
    <main>
      <Header />
      <slot />
      <Footer />
    </main>
    <style>
      main {
        max-width: 48rem;
        height: 100vh;
        height: 100svh;
        display: flex;
        flex-direction: column;

        header + section {
          flex: 1;
        }
      }
    </style>
    <Fragment set:html={import.meta.env.FOOTER_INJECT} />
  </body>
</html>
